{
  "connection": "default",
  "collectionName": "articles",
  "info": {
    "name": "article"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "content": {
      "type": "richtext"
    },
    "cover": {
      "collection": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "author": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "articles"
    },
    "location": {
      "type": "string",
      "required": false
    },
    "geolocation": {
      "type": "json"
    },
    "isGeo": {
      "type": "boolean",
      "default": false
    },
    "travelDate": {
      "type": "date"
    },
    "categorie": {
      "type": "enumeration",
      "enum": [
        "food",
        "travel",
        "tech"
      ]
    },
    "region": {
      "type": "enumeration",
      "enum": [
        "asia",
        "africa",
        "europe",
        "america",
        "oceania"
      ]
    }
  }
}
